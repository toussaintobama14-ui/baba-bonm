<h1>ðŸ’£ Baba Bonm</h1>

<div id="stats">
  <div>Score : <span id="score">0</span></div>
  <div>Coins : ðŸª™ <span id="coins">0</span></div>
</div>

<div id="grid"></div>

<div id="gameOver">
  <h2>ðŸ’¥ Game Over</h2>
  <p>Score : <span id="finalScore"></span></p>
  <p>Coins gagnÃ©s : ðŸª™ <span id="finalCoins"></span></p>
  <button onclick="startGame()">Rejouer</button>
</div>

<script>
let score=0;
let coins=0;
let bombIndex;

function startGame(){
  score=0;
  coins=0;
  updateStats();
  document.getElementById("gameOver").style.display="none";
  createGrid();
}

function updateStats(){
  document.getElementById("score").innerText=score;
  document.getElementById("coins").innerText=coins;
}

function createGrid(){
  const grid=document.getElementById("grid");
  grid.innerHTML="";
  bombIndex=Math.floor(Math.random()*9);

  for(let i=0;i<9;i++){
    const card=document.createElement("div");
    card.className="card";
    card.onclick=()=>reveal(card,i);
    grid.appendChild(card);
  }
}

function reveal(card,index){
  if(card.innerHTML!=="") return;

  if(index===bombIndex){
    card.classList.add("bomb");
    card.innerHTML="ðŸ’£";
    endGame();
  }else{
    card.classList.add("treasure");
    card.innerHTML="ðŸ’Ž";
    score++;
    coins++;
    updateStats();
  }
}

function endGame(){
  document.getElementById("finalScore").innerText=score;
  document.getElementById("finalCoins").innerText=coins;
  document.getElementById("gameOver").style.display="block";
}

startGame();
</script>

